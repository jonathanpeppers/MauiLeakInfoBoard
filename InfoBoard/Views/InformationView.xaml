<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:InfoBoard.Models"
             x:Class="InfoBoard.Views.InformationView"
             Title="Information View">
    <ContentPage.BindingContext>
        <models:Information/>
    </ContentPage.BindingContext>
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"  Margin="20">
        <Label FontSize="22" FontAttributes="Bold" Text="{Binding Title}" VerticalOptions="End" />
        <Line  StrokeThickness="15"/>
        <Label FontSize="22" Text="{Binding Message}" VerticalOptions="End" />
    </VerticalStackLayout>
</ContentPage>